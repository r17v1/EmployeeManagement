<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/profile.css">
        <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <title>Profile</title>
</head>

<%- include("menue"); -%>

<body>
    <div id='main_body'>
        <div id="profile_pic">
            <%- include("dp") -%>
        </div>

    <div id="user_info" class="formbox">
        <label>ID</label>
        <input id='uid' type="text" value=<%=user.id%> disabled><br>
        <label>Name</label>
        <input type="text" value="<%=user.name%>" disabled><br>
        <label>Department</label>
        <input type="text" disabled value="<%=user.department%>" ><br>
        <label>Designation</label>
        <input id='designation' type="text" class='admin_editable' disabled value="<%=user.designation%>" ><br>
        <label>Salary</label>
        <input id='salary' type="number" class='admin_editable' disabled value="<%=user.salary%>" ><br>
        <label>Account Type</label>
        <select id='acc_type' class='admin_editable' disabled>
            <% user.acc_types.forEach((i)=>{ %>
                <%if(i[1]){%>
                    <option selected><%=i[0]%></option>
                <%}else{%>
                    <option><%=i[0]%></option>
                <%}%>
            <%})%>
        </select> <br>
        <label>Email</label>
        <input id="email" type="email" class='editable' disabled value="<%=user.email%>" ><br>
        <div id="err_email"></div>
        <label>Home Address</label>
        <input id="address" type="text" class='editable'  disabled value="<%=user.address%>" ><br>
        <label>Phone Number</label>
        <input id="number" type="text" class='editable' disabled value="<%=user.number%>"  ><br>
        <label>Alternate Number</label>
        <input id="alt_number" type="text" class='editable' disabled value="<%=user.alt_number%>"  ><br>
        <% if(edit){%> 
            <button id="submitEdit">Edit</button> 
        <%}%>
    </div>

</div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="/scripts/userInfo.js"></script>